# Exemplo de variáveis de ambiente para conectar ao Supabase
# Substitua pelo valor da sua Database URL (fornecido pelo Supabase)
# Exemplo de DATABASE_URL: postgres://postgres:password@db.abcde.supabase.co:5432/postgres

# Conexão completa (preferencial) — o código usa DATABASE_URL quando presente
DATABASE_URL=

# Alternativa (preencher separadamente se não usar DATABASE_URL)
DB_HOST=
DB_PORT=5432
DB_NAME=postgres
DB_USER=
DB_PASSWORD=

# Força uso de SSL (o código detecta supabase.co automaticamente)
DB_SSL=true

# Outras variáveis do app
NODE_ENV=development
COOKIE=some_random_cookie_key
