<div class="header-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div class="card-">
      <h3 class="card-title my-1 mx-1">Gerenciamento de Usuários</h3>
    </div>
 
  </div>
     <a href="/restrito/admin/users/create" class="btn btn-primary">
      <i class="fas fa-plus"></i> Novo Usuário </a>
      <hr>
  <div class="table-responsive modern-table">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Função</th>
          <th>Municípios</th>
          <th>último Login</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody><% users.forEach(user => { %> <tr>
          <td><%= user.username %> </td>
          <td><%= user.email %> </td>
          <td>
            <span class="badge bg-<%= user.role === 'admin' ? 'success' : 'warning' %>"><%= user.role === 'admin' ? 'Administrador' : 'Usuário' %> </span>
          </td>
          <td><%= user.cities || 'Nenhum' %> </td>
          <td>
            <%= user.last_login ? new Date(user.last_login).toLocaleString() : 'Nunca' %>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-sm bg-outline-blue" onclick="alert('TODO: Visualizar detalhes do usuário')">
                <i class="fas fa-edit"></i>
              </button>
              <button type="button" class="btn btn-sm btn-outline-danger" onclick="alert('TODO: Excluir usuário')">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </td>
        </tr><% }); %> </tbody>
    </table>
  </div>
</div>

