<!-- SEU FORMULÁRIO E TABELAS (mantém igual) -->
<form id="searchByMonthAndCity" class="" method="POST" accept-charset="utf-8">
    <div class="header-card dashboard-header">
        <div class="dashboard-title-section">
            <div class="title-wrapper">
                <div class="title-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="title-content">
                    <h2 class="dashboard-title">Consultas</h2>
                    <p class="dashboard-subtitle">Análise completa de visitas com detalhes</p>
                </div>
            </div>
    
            <div class="filter-section">
                <form id="search" method="POST" accept-charset="utf-8">
                    <div class="filter-wrapper">
                        <div class="select-wrapper">
                            <select id="monthSelect" name="month" class="form-select mb-2">
                                <option value=""> Selecione o mês</option>
                                <option value=1>Janeiro</option>
                                <option value=2>Fevereiro</option>
                                <option value=3>Março</option>
                                <option value=4>Abril</option>
                                <option value=5>Maio</option>
                                <option value=6>Junho</option>
                                <option value=7>Julho</option>
                                <option value=8>Agosto</option>
                                <option value=9>Setembro</option>
                                <option value=10>Outubro</option>
                                <option value=11>Novembro</option>
                                <option value=12>Dezembro</option>
                            </select>
                            <select id="citySelect" name="city" class="form-select w-100 mt-4">
                                <option value="">Município</option>
                                <% cities.forEach(city=> { %>
                                    <option value="<%= city.city_id %>"><%= city.city %></option>
                                    <% }) %>
                            </select>
                        </div>
                        <button type="button" class="btn btn-primary search-btn" onclick="searchByMonthAndCity()">
                            <i class="fas fa-search"></i>
                            <span class="btn-text">Filtrar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</form>

<div id="tables-wrapper" style="display: none;">
    <div class="header-card stats-card dashboard-header">
        <div class="card-header-clean">
            <div class="header-main">
                <div class="header-content">
                    <h3 class="header-title mb-2"><i class="fa fa-list-ul me-2"></i>Lançamentos</h3>
                </div>
            </div>
        </div>
        <section class="content-header">
            <div class="table-responsive modern-table">
                <table id="registrosTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mês</th>
                            <th>Município</th>
                            <th>Casa de Oração</th>
                            <th>GVI</th>
                            <th>GVM</th>
                            <th>RF</th>
                            <th>RE</th>
                            <th>Total</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% records.forEach(record=> { %>
                            <tr>
                                <td class="centered-cell">
                                    <div class="value-badge warning">
                                        <%= record.month %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge warning">
                                        <%= record.city %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge warning">
                                        <%= record.church %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge neutral">
                                        <%=  record.gvi %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge neutral">
                                        <%=  record.gvm %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge neutral">
                                        <%=  record.rf %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge neutral">
                                        <%=  record.re %>
                                    </div>
                                </td>
                                <td class="centered-cell">
                                    <div class="value-badge success">
                                        <%=  record.amount %>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-primary me-1 btn-edit" data-id="<%= record.id %>">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger btn-delete" data-id="<%= record.id %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <div class="header-card mt-2" id="pendings">
        <div class="header-card stats-card dashboard-header">
            <div class="card-header-clean">
                <div class="header-main">
                    <div class="header-content">
                        <h3 class="header-title mb-2"><i class="fa fa-exclamation-triangle me-2"></i>Pendentes (Mês anterior)</h3>
                    </div>
                </div>
            </div>
        <section class="content-header">
            <div class="table-responsive modern-table">
                <table id="registrosTable2" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Município</th>
                            <th>Casa de Oração</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recordsPending.forEach(recordP=> { %>
                            <tr>
