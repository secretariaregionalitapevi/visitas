<!DOCTYPE html>
<html lang="pt-br">

<%- include('../head') %>

<body id="page-top" class="bg-white">
    <div class="d-flex justify-content-center align-items-center">
        <div class="mt-5">
            <img src="/static/images/logo-ccb-light.png" alt="Logo" class="logo-small" />
        </div>
    </div>

    <div class="container-xl px-4">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header bg-gray justify-content-center">
                        <h3 class="fw-light my-4 text-center text-dark">Admin de Vistas</h3>
                    </div>
                    <div class="card-body">
                        <% if (message !='' ) { %>
                            <div class="alert alert-danger alert-solid" role="alert">
                                <%= message %>
                            </div>
                            <% } %>
                                <form action="/restrito/acesso" method="post" id="loginForm">
                                    <div class="mb-3 text-center">
                                        <label class="small mb-1" for="inputEmailAddress">E-mail</label>
                                        <input class="form-control text-center" name="email" id="inputEmailAddress" type="text"
                                            placeholder="Informe o e-mail">
                                    </div>
                                    <div class="mb-3 text-center">
                                        <label class="small mb-1" for="inputPassword">Senha</label>
                                        <input class="form-control text-center" name="password" id="inputPassword" type="password"
                                            placeholder="Informe a senha">
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button data-sitekey="6LccF-0qAAAAAFfO-T6JHBlKpSGMPDThyACAF9Ll"
                                            data-callback="onSubmit"
                                            class="g- btn bg-dark-blue center text-white w-100">
                                            Acessar
                                        </button>
                                    </div>
                                </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="small">Congregação Cristã no Brasil - <%= regional.name %>.</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script>
    function onSubmit(token) {
        document.getElementById("loginForm").submit();
    }
</script>